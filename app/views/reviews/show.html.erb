<div class="container">
  <div class="row mb-3">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <% @restaurant.reviews.each do |review| %>
          <p> <%= review.content %> </p>
          <small> Ratings: <%= review.rating %></small>
          <% end %>
          <%= link_to 'Back', restaurants_path, class: 'btn btn-secondary mt-2' %>
          <%= link_to 'Add review', restaurant_review_path, class: 'btn btn-primary mt-2' %>
        </div>
      </div>
      
    </div>
  </div>
</div>