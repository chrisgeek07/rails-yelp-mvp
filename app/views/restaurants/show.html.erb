<div class="container">
  <div class="row mb-3">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h1> <%= @restaurant.name %> </h1>
          <p> <%= @restaurant.address %></p>
          <p> <%= @restaurant.category %></p>
          <p> <%= @restaurant.address %> </p>
          <p> <%= @restaurant.phone_number %> </p>
          <%= link_to 'Back', restaurants_path, class: 'btn btn-secondary mt-2' %>

          <%= link_to 'Add review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary mt-2' %>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-body">
          <% @restaurant.reviews.each do |review| %>
          <p> <%= review.content %> </p>
          <small> Ratings: <%= review.rating %> / 5</small>
          <% end %>
          <hr>
          <%= link_to 'Back', restaurants_path, class: 'btn btn-secondary mt-2' %>
          <%= link_to 'List reviews', restaurant_reviews_path(@restaurant), class: 'btn btn-primary mt-2' %>
        </div>
      </div>
      
    </div>
  </div>
</div>